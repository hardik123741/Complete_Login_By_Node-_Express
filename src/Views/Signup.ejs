<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="./Signup.css" />
    <%-include('partials/BoostrapCss.ejs')%>
  </head>
  <body class="Background2">
    <script>
      const validate = () => {
        if (
          document.getElementById("Password") !==
          document.getElementById("ConfirmPassword")
        ) {

          alert("Both Paaword Are not same");
          return false;
        }
        else{
            return true;
        }
      };
    </script>

    <div class="container-fluid">
      <%- include ('partials/NavBar.ejs')%>
      <div class="row">
        <div class="row justify-content-center">
          <div class="col-4 mx-5 my-5">
            <div class="shadow-lg p-3 mb-5 bg-body rounded">
              <h1 class="d-flex justify-content-center">Sign Up</h1>
              <form class="row g-3" action="/submitRegisteration" method="POST">
                <div class="col-md-6">
                  <label for="FirstName" class="form-label">First Name:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="FirstName"
                    name="FirstName"
                    required="required"
                  />
                </div>
                <div class="col-md-6">
                  <label for="LastName" class="form-label">Last Name:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="LastName"
                    name="LastName"
                    required="required"
                  />
                </div>

                <div class="col-md-6">
                  <label for="inputEmail4" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    id="inputEmail4"
                    name="Email"
                    required="required"
                  />
                  <p style="color: red;" class="form-label"><b><%=msg%></b></p>
                </div>
                <div class="col-md-6">
                  <label for="Number" class="form-label">Phone Number:</label>
                  <input
                    type="number"
                    class="form-control"
                    id="inputPassword4"
                    name="PhoneNumber"
                    minlength="10"
                    maxlength="10"
                    required="required"
                  />
                </div>
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Password</label>
                  <input
                    type="Password"
                    class="form-control"
                    id="Password"
                    placeholder="Password"
                    name="Password"
                    required="required"
                  />
                </div>
                <div class="col-12">
                  <label for="inputAddress2" class="form-label"
                    >Confirm Password</label
                  >
                  <input
                    type="password"
                    class="form-control"
                    id="ConfirmPassword"
                    placeholder="Confirm Password"
                    name="ConfirmPassword"
                    required="required"
                  />
                </div>

                <div class="col-md-6">
                  <label for="inputState" class="form-label">Gender</label>
                  <select
                    id="inputState"
                    class="form-select"
                    name="Gender"
                    required="required"
                  >
                    <option>Male</option>
                    <option>FeMale</option>
                    <option>Other</option>
                  </select>
                </div>

                <div class="col-12">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="gridCheck"
                      required="required"
                    />
                    <label class="form-check-label" for="gridCheck">
                      Check me out
                    </label>
                  </div>
                </div>
                <div class="col-12 d-flex justify-content-center">
                  <button
                    type="submit"
                    class="btn btn-outline-primary px-5"
                    onclick="validate();"
                  >
                    Sign in
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <%-include('partials/Footer.ejs'); %>
    </div>
    <%-include('partials/Boostrapjs.ejs')%>
  </body>
</html>
